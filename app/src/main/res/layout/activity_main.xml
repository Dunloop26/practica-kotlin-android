<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="@string/welcome_to"
        android:fontFamily="@font/quicksand"
        android:textSize="24sp"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subtitle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/quicksand"
        android:textFontWeight="800"
        android:text="@string/app_name"
        android:textAlignment="textStart"
        android:textSize="50sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registrar_estudiantes"
        android:layout_below="@id/title"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp"
        android:text="@string/register_students"
        android:textAlignment="viewEnd"
        android:textSize="18sp"
        android:paddingEnd="40dp"
        android:paddingStart="150dp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ingreso"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/estadisticas"
        android:layout_below="@id/registrar_estudiantes"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:text="@string/statistics"
        android:textAlignment="viewEnd"
        android:textSize="18sp"
        android:paddingEnd="40dp"
        android:paddingStart="150dp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/estadistica"/>

    <ImageView
        style="@style/Custom.FloatingButton"
        android:src="@drawable/ic_outline_lightbulb_24"
        app:tint="@color/orange_700"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        />

</RelativeLayout>